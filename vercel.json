{
    "buildCommand": "npm run build",
    "installCommand": "npm install",
    "outputDirectory": "dist/public",
    "functions": {
        "api/index.js": {
            "maxDuration": 30
        }
    },
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/api/index"
        },
        {
            "source": "/((?!api).*)",
            "destination": "/index.html"
        }
    ]
}