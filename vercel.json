{
    "buildCommand": "npm run build",
    "installCommand": "npm install",
    "outputDirectory": "dist/public",
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/api/index"
        },
        {
            "source": "/((?!api/).*)",
            "destination": "/index.html"
        }
    ],
    "functions": {
        "api/index.js": {
            "runtime": "nodejs20.x"
        }
    }
}