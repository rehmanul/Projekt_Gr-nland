# Copy to .env and set all required production values.
# With docker-compose Postgres: postgresql://groenland:password@localhost:5432/groenland
DATABASE_URL=postgresql://groenland:password@localhost:5432/groenland
DATABASE_SSL=false

# Base URL for magic links (use https in production)
BASE_URL=https://your-domain.example

# Auth
JWT_SECRET=replace_with_a_long_random_secret
JWT_EXPIRY_DAYS=7
MAGIC_LINK_EXPIRY_MINUTES=60

# SMTP (Google Workspace SMTP relay recommended)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_AUTH_MODE=login
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=

# Object storage
STORAGE_PROVIDER=gcs

# Google Cloud Storage (GCS)
GCP_PROJECT_ID=
GCP_CREDENTIALS_JSON=
GCS_BUCKET=
GCS_PREFIX=campaigns

# AWS S3 (optional alternative)
AWS_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SESSION_TOKEN=
S3_BUCKET=
S3_PREFIX=campaigns

# Upload constraints
UPLOAD_MAX_MB=50
UPLOAD_MAX_FILES=10
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/webp,application/pdf,video/mp4,video/quicktime

# Tenant override for local development (optional)
TENANT_DOMAIN_OVERRIDE=

# Reminder scheduling
REMINDER_ASSET_DAYS=7,3,1
REMINDER_DRAFT_DAYS=7,3,1
REMINDER_ESCALATE_AFTER_DAYS=1

# Bootstrap (run npm run bootstrap)
BOOTSTRAP_TENANT_DOMAIN=
BOOTSTRAP_TENANT_NAME=
BOOTSTRAP_CS_EMAIL=

PORT=5000
HOST=127.0.0.1
